{
  "manifest_version": 3,
  "name": "Tabify",
  "description": "A browser extension to save tabs, sessions, and manage them.",
  "version": "0.1.0",
  "author": "navorite",
  "homepage_url": "https://github.com/navorite/tabify",

  "action": {
    "default_title": "Tabify",
    "default_popup": "./src/popup/index.html",
    "default_icon": {
      "16": "./icons/tabify-16.png",
      "32": "./icons/tabify-32.png",
      "64": "./icons/tabify-64.png"
    }
  },

  "background": {
    "scripts": ["./src/background/background.js"],
    "type": "module"
  },

  "options_ui": {
    "page": "./src/options/index.html",
    "open_in_tab": true
  },

  "permissions": ["tabs", "storage", "unlimitedStorage", "cookies"],

  "icons": {
    "16": "./icons/tabify-16.png",
    "32": "./icons/tabify-32.png",
    "48": "./icons/tabify-48.png",
    "64": "./icons/tabify-64.png",
    "96": "./icons/tabify-96.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabify@ahmads.dev",
      "strict_min_version": "42.0"
    }
  }
}
