{
  "name": "sessionic",
  "version": "1.6.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run clean && cross-env NODE_ENV=development run-p setup build-background dev-web",
    "dev:ff": "npm run clean && cross-env NODE_ENV=development TARGET=firefox run-p setup build-background dev-web",
    "build": "npm run clean && cross-env NODE_ENV=production run-p build-* setup",
    "build:ff": "npm run clean && cross-env NODE_ENV=production TARGET=firefox run-p build-* setup",
    "open": "web-ext run -s=dist -t=chromium",
    "open:ff": "web-ext run -s=dist",
    "dev-web": "vite dev",
    "build-web": "vite build",
    "build-background": "vite build -c vite.config.background.ts",
    "setup": "tsx ./scripts/main.ts",
    "clean": "rimraf dist",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "prettier --plugin=prettier-plugin-svelte --check . && eslint .",
    "format": "prettier --plugin=prettier-plugin-svelte --write .",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.11.7",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@unocss/reset": "^0.58.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "release-it": "^17.0.3",
    "rimraf": "^5.0.5",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "unocss": "^0.58.4",
    "vite": "^5.0.12",
    "web-ext": "^7.11.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "idb": "^8.0.0",
    "lz-string": "^1.5.0",
    "pino": "^8.17.2",
    "url": "^0.11.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "draft": true,
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": ":fire: New Features"
            },
            {
              "type": "perf",
              "section": ":rocket: Enhancements"
            },
            {
              "type": "enhance",
              "section": ":rocket: Enhancements"
            },
            {
              "type": "fix",
              "section": ":bug: Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
