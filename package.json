{
	"name": "sessionic",
	"version": "0.2.4",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run clean && cross-env NODE_ENV=development run-p setup build:background dev:web",
		"dev-ff": "npm run clean && cross-env NODE_ENV=development TARGET=firefox run-p setup build:background dev:web",
		"dev:web": "vite dev",
		"build": "npm run clean && cross-env NODE_ENV=production run-p build:* setup",
		"build-ff": "npm run clean && cross-env NODE_ENV=production TARGET=firefox run-p build:* setup",
		"build:web": "vite build",
		"build:background": "vite build -c vite.config.background.ts",
		"open": "web-ext run -s=dist -t=chromium",
		"open:ff": "web-ext run -s=dist",
		"setup": "tsx ./scripts/main.ts",
		"clean": "rimraf dist",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "npm run format && eslint .",
		"lint:fix": "npm run format && eslint . --fix",
		"release": "release-it",
		"release:beta": "release-it --preRelease=beta",
		"release:info": "release-it --release-version"
	},
	"devDependencies": {
		"@release-it/conventional-changelog": "^7.0.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.5",
		"@tsconfig/svelte": "^5.0.0",
		"@types/node": "^20.5.0",
		"@types/webextension-polyfill": "^0.10.1",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"autoprefixer": "^10.4.15",
		"cross-env": "^7.0.3",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.28",
		"prettier": "2.8.7",
		"prettier-plugin-svelte": "2.10.0",
		"prettier-plugin-tailwindcss": "0.2.7",
		"release-it": "^16.1.5",
		"rimraf": "^5.0.1",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.1",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"web-ext": "^7.6.2",
		"webextension-polyfill": "^0.10.0"
	},
	"dependencies": {
		"chokidar": "^3.5.3",
		"idb": "^7.1.1",
		"lz-string": "^1.5.0",
		"pino": "^8.15.0",
		"url": "^0.11.1"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): v${version}",
			"tagName": "v${version}",
			"requireCleanWorkingDir": false
		},
		"github": {
			"draft": true,
			"release": true
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"header": "# Changelog",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": ":fire: New Features"
						},
						{
							"type": "perf",
							"section": ":rocket: Enhancements"
						},
						{
							"type": "refactor",
							"section": ":rocket: Enhancements"
						},
						{
							"type": "enhance",
							"section": ":rocket: Enhancements"
						},
						{
							"type": "fix",
							"section": ":bug: Bug Fixes"
						}
					]
				}
			}
		}
	}
}
